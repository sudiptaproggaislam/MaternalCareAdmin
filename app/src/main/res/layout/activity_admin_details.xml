<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminDetailsActivity">
    <include
        android:id="@+id/adminsDetails_activity_toolbar"
        layout="@layout/toolbar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminsDetails_activity_toolbar"
        android:id="@+id/adminInfo"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amit"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:id="@+id/tvNameofAdmin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc@gmail.com"
            android:layout_below="@id/tvNameofAdmin"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:id="@+id/tvemailOfAdmin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Checked"
            android:layout_below="@id/tvemailOfAdmin"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:textSize="13dp"
            android:textColor="#78C4E8"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:id="@+id/tvCheckAdmin"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adminInfo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:id="@+id/adButtons"
        android:gravity="center">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCheckAdmin"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Accept"
            android:id="@+id/acceptAdmin"/>

        <Button
            android:id="@+id/declineAdmin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Decline" />

    </LinearLayout>
</RelativeLayout>